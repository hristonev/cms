<script type="text/template" id="js-template-edit">
    <div id="<%= modalId %>" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">
                        {% trans from "public" %}edit_modal{% endtrans %}
                    </h4>
                </div>
                <div class="modal-body">
                    <% if(!error){ %>
                        <form>
                            <input type="hidden" name="id" value="<%= id %>">
                            <% _.each(roles, function(role, key){ %>
                                <div class="checkbox">
                                    <label>
                                        <%
                                        if(role.allow){
                                            var check = " checked";
                                        }else{
                                            var check = "";
                                        }
                                        %>
                                        <input<%= check %> value="<%= role.role %>" name="role[<%= key %>]" type="checkbox"> <%= role.role %>
                                    </label>
                                </div>
                            <% }); %>
                        </form>
                    <% }else{ %>
                    <p class="text text-danger"><%= errorMsg %></p>
                    <% } %>
                </div>
                <div class="modal-footer">
                    <span class="text-danger js-error"></span>
                    <% if(!error){ %>
                        <button type="button" class="btn btn-primary js-user-save">Save</button>
                    <% } %>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</script>
